{
  "name": "manage",
  "version": "0.0.1",
  "description": "",
  "main": "src/scripts/index.js",
  "scripts": {
    "build:html": "jade src --out dist",
    "build:css": "sass src/styles/index.sass:dist/index.css --style compressed --sourcemap=none",
    "build:js": "browserify src/scripts/index.js -t babelify -o dist/bundle.js --extension=jsx",
    "build": "rm -rf dist && mkdir dist && npm run build:html & npm run build:css &npm run build:js",
    "watch:html": "jade -w src --out dist",
    "watch:css": "sass -w src/styles/index.sass:dist/index.css --style compressed",
    "watch:js": "watchify src/scripts/index.js -t babelify -o dist/bundle.js --extension=jsx --debug",
    "watch": "rm -rf dist && mkdir dist && npm run watch:html & npm run watch:css & npm run watch:js",
    "server": "browser-sync start --server \"dist\" --files \"src/**/*.js\", \"src/**/*.sass\", \"src/**/*.jade\" --port 3000 --reload-delay 300 --no-notify",
    "lint": "eslint src --ext=js --ext=jsx",
    "develop": "npm run watch & npm run server",
    "start": "npm run develop",
    "test": "mocha --require=babel-core/register test/**/*.js",
    "test:watch": "npm test -- --watch"
  },
  "author": "khirayama",
  "repository": {
    "type": "git",
    "url": "https://github.com/khirayama/manage"
  },
  "license": "ISC",
  "engines": {
    "node": ">=4.1.1",
    "npm": ">=2.14.4"
  },
  "eslintConfig": {
    "extends": "airbnb"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "babel-plugin-espower"
    ]
  },
  "devDependencies": {
    "babel": "^6.3.13",
    "babel-core": "^6.3.21",
    "babel-plugin-espower": "^2.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browser-sync": "^2.10.1",
    "browserify": "^12.0.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.1.1",
    "eslint-plugin-react": "^3.11.3",
    "jade": "^1.11.0",
    "jsdom": "^7.2.1",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "power-assert": "^1.2.0",
    "react": "^0.14.3",
    "react-addons-test-utils": "^0.14.3",
    "react-dom": "^0.14.3",
    "watchify": "^3.6.1"
  },
  "dependencies": {
    "micro-emitter": "^1.1.0",
    "micro-store": "^0.3.1",
    "moment": "^2.10.6"
  }
}
